# krjobs-scraper 환경 설정

# 스토리지 설정
STORAGE_TYPE=local  # local | supabase
DATA_DIR=./data     # 로컬 저장 경로 (Cloud Functions에서는 /tmp 사용)

# Supabase 설정 (STORAGE_TYPE=supabase 일 때 필수)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# 스크래핑 설정
SCRAPE_DELAY_SECONDS=1.5  # 요청 간 딜레이
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# 로깅
LOG_LEVEL=INFO

# Google Sheets (Phase 2 - 추후 사용)
# GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials.json
# GOOGLE_SHEETS_ID=your_sheet_id_here

# Google Cloud Storage (Phase 2 - 추후 사용)
# GCS_BUCKET_NAME=your_bucket_name
# GCS_CREDENTIALS_PATH=./credentials.json
